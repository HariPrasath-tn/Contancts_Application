<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/middleItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.98"
    android:background="@drawable/text_view_ripple">

    <TextView
        android:id="@+id/contactsRecyclerViewMiddleItemUSerPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="9597796313"
        app:layout_constraintStart_toStartOf="@+id/contactsRecyclerViewMiddleItemUSerName"
        app:layout_constraintTop_toBottomOf="@+id/contactsRecyclerViewMiddleItemUSerName" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contactsRecyclerViewMiddleItemUSerDp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/app_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactsRecyclerViewMiddleItemUSerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Master Rio"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/contactsRecyclerViewMiddleItemUSerDp"
        app:layout_constraintTop_toTopOf="@+id/contactsRecyclerViewMiddleItemUSerDp" />

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contactRecyclerViewMiddleContactNameFirstLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="A"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/contactsRecyclerViewMiddleItemUSerDp"
        app:layout_constraintEnd_toEndOf="@+id/contactsRecyclerViewMiddleItemUSerDp"
        app:layout_constraintStart_toStartOf="@+id/contactsRecyclerViewMiddleItemUSerDp"
        app:layout_constraintTop_toTopOf="@+id/contactsRecyclerViewMiddleItemUSerDp" />

</androidx.constraintlayout.widget.ConstraintLayout>