<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/contactsRecyclerViewSingleItemLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="A"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/singleItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="@drawable/single_item_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactsRecyclerViewSingleItemLetter">

        <TextView
            android:id="@+id/contactsRecyclerViewSingleItemUSerPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="9597796313"
            app:layout_constraintStart_toStartOf="@+id/contactsRecyclerViewSingleItemUSerName"
            app:layout_constraintTop_toBottomOf="@+id/contactsRecyclerViewSingleItemUSerName" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contactsRecyclerViewSingleItemUSerDp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/app_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contactsRecyclerViewSingleItemUSerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Master Rio"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/contactsRecyclerViewSingleItemUSerDp"
            app:layout_constraintTop_toTopOf="@+id/contactsRecyclerViewSingleItemUSerDp" />

        <TextView
            android:id="@+id/contactRecyclerViewSingleContactNameFirstLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="A"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/contactsRecyclerViewSingleItemUSerDp"
            app:layout_constraintEnd_toEndOf="@+id/contactsRecyclerViewSingleItemUSerDp"
            app:layout_constraintStart_toStartOf="@+id/contactsRecyclerViewSingleItemUSerDp"
            app:layout_constraintTop_toTopOf="@+id/contactsRecyclerViewSingleItemUSerDp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>