<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_item_bg">

    <TextView
        android:id="@+id/contactsRecyclerViewBottomItemUSerPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="9597796313"
        app:layout_constraintStart_toStartOf="@+id/contactsRecyclerViewBottomItemUSerName"
        app:layout_constraintTop_toBottomOf="@+id/contactsRecyclerViewBottomItemUSerName" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contactsRecyclerViewBottomItemUSerDp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/app_icon"/>

    <TextView
        android:id="@+id/contactsRecyclerViewBottomItemUSerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Master Rio"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/contactsRecyclerViewBottomItemUSerDp"
        app:layout_constraintTop_toTopOf="@+id/contactsRecyclerViewBottomItemUSerDp" />

    <TextView
        android:id="@+id/contactRecyclerViewBottomContactNameFirstLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="A"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/contactsRecyclerViewBottomItemUSerDp"
        app:layout_constraintEnd_toEndOf="@+id/contactsRecyclerViewBottomItemUSerDp"
        app:layout_constraintStart_toStartOf="@+id/contactsRecyclerViewBottomItemUSerDp"
        app:layout_constraintTop_toTopOf="@+id/contactsRecyclerViewBottomItemUSerDp" />

</androidx.constraintlayout.widget.ConstraintLayout>